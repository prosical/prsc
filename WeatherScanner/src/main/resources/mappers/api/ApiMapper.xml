<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.weather.api.repository.IApiDAO">

	<!--  DB컬럼과 VO필드명이 다른 경우 처리 방법 -->
	<resultMap id="ApiResultMap" type="com.spring.weather.api.model.ApiVO">
		<id property="city" column="city" />
		<result property="lat" column="lat" />
		<result property="lon" column="lon" />
	</resultMap>

	<select id="getLatLon" resultMap="ApiResultMap">
		SELECT * 
		FROM lat_lon 
		WHERE city=#{city}
	</select>
</mapper>